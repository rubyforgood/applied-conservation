<section class="login-section">
  <img class="logo" alt="turboCAP" src=<%= asset_path('turbocap-logo.png')%>/>
  <h2 class="login-heading">Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :email, class: 'form-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-field' %>
    </div>

    <div class="field">
      <%= f.label :password, class: 'form-label' %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", class: 'form-field' %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, class: 'form-label' %>
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-field' %>
    </div>

    <div class="form-footer">
      <%= f.submit "Sign up", class: 'login-button' %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</section>
